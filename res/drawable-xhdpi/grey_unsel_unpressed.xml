<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                    android:startColor="@color/LtGrey"
                    android:endColor="@color/MdGrey"
                    android:angle="270" />
            <stroke
                    android:width="2dp"
                    android:color="@color/MdGrey" />
            <corners
                    android:radius="4dp" />
            <padding
                    android:left="2dp"
                    android:top="2dp"
                    android:right="2dp"
                    android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="@color/LtGrey"
                    android:endColor="@color/MdGrey"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="@color/DrStroke" />
            <corners
                    android:radius="2dp" />
            <padding
                    android:left="2dp"
                    android:top="2dp"
                    android:right="2dp"
                    android:bottom="2dp" />
        </shape>
    </item>
</layer-list>